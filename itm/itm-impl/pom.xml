      <version>${project.version}</version>
      <scope>test</scope>
    </dependency>
    <dependency>
      <groupId>org.opendaylight.genius</groupId>
      <artifactId>lockmanager-impl</artifactId>
      <version>${project.version}</version>
      <scope>test</scope>
