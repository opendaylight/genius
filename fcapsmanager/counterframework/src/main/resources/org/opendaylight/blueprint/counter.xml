<?xml version="1.0" encoding="UTF-8"?>

<blueprint xmlns="http://www.osgi.org/xmlns/blueprint/v1.0.0"
           xmlns:odl="http://opendaylight.org/xmlns/blueprint/v1.0.0">

    <reference id="dataBroker"
               interface="org.opendaylight.controller.md.sal.binding.api.DataBroker"/>

    <bean id="counterBatchHandler" class="org.opendaylight.genius.fcapsmanager.counterframework.CounterBatchHandler">
        <argument ref="dataBroker"/>
    </bean>
    <bean id="pmService" class="org.opendaylight.genius.fcapsmanager.counterframework.CounterManagement"
          init-method="start" destroy-method="close">
        <argument ref="dataBroker"/>
    </bean>
    <service ref="pmService" interface="org.opendaylight.genius.fcapsmanager.PMService" />
    <bean id="retreiveStatistics" class="org.opendaylight.genius.fcapsmanager.counterframework.counternorthbound.RetreiveStatistics">
        <argument ref="dataBroker"/>
    </bean>
    <bean id="NodeConnectorInventoryImpl" class="org.opendaylight.genius.fcapsmanager.counterframework.NodeConnectorInventoryImpl"
          destroy-method="close">
        <argument ref="dataBroker"/>
    </bean>

</blueprint>