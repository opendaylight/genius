<blueprint xmlns="http://www.osgi.org/xmlns/blueprint/v1.0.0">
    <reference id="rpcRegistryRef" interface="org.opendaylight.controller.sal.binding.api.RpcProviderRegistry"
               availability="optional"/>
    <command-bundle xmlns="http://karaf.apache.org/xmlns/shell/v1.1.0">
        <command>
            <action class="org.opendaylight.genius.srm.shell.RecoverCommand">
                <property name="rpcRegistry" ref="rpcRegistryRef"/>
            </action>
        </command>
        <command>
            <action class="org.opendaylight.genius.srm.shell.ReinstallCommand">
                <property name="rpcRegistry" ref="rpcRegistryRef"/>
            </action>
        </command>
    </command-bundle>
</blueprint>
